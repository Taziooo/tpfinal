{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    {% if user %}
        <p>Email : {{ user.email }}</p>
        <p>Rôles : {{ user.roles|join(', ') }}</p>
    {% else %}
        <p>Pas connecté.</p>
    {% endif %}
{% endblock %}
